{
  "name": "webdev-template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/serser/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc && cd frontend && npm run build",
    "preview": "cd frontend && preview",
    "client": "cd frontend && npm run dev",
    "start": "node ./dist/server/app.js NODE_ENV=production",
    "server": "tsx watch ./backend/app.ts NODE_ENV=development",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "seed": "tsx ./backend/prisma/seed.ts",
    "prisma:generate": "prisma generate --sql",
    "prisma:migrate:dev": "prisma migrate dev --name init && npm run seed",
    "prisma:migrate:prod": "prisma migrate deploy && npm run seed",
    "prisma:studio": "prisma studio",
    "test": "jest",
    "genkey": "tsx ./backend/configs/generateKeyPair.ts",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "prisma": {
    "schema": "backend/prisma/schema"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.8",
    "@types/passport-jwt": "^4.0.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "helmet": "^8.0.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
